<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".FragmentGameManagementStatsManager">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout_games_statsManager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/home_team_game_statsmanager"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:contentDescription="@string/home_team_logo"
                android:src="@drawable/esake_logo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.02"
                android:clickable="true"
                android:focusable="true"/>

            <ImageView
                android:id="@+id/away_team_game_statsmanager"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:contentDescription="Away Team Logo"
                android:src="@drawable/esake_logo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.02"
                android:clickable="true"
                android:focusable="true"/>

            <RadioGroup
                android:id="@+id/radioGroup_homeTeam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_team_game_statsmanager"
                app:layout_constraintVertical_bias="0.0">

                <RadioButton
                    android:id="@+id/radio_home_player_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Home Player 1" />
                <RadioButton
                    android:id="@+id/radio_home_player_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Home Player 2" />
                <RadioButton
                    android:id="@+id/radio_home_player_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Home Player 3" />
                <RadioButton
                    android:id="@+id/radio_home_player_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Home Player 4" />
                <RadioButton
                    android:id="@+id/radio_home_player_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Home Player 5" />
            </RadioGroup>
            <RadioGroup
                android:id="@+id/radioGroup_awayTeam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_team_game_statsmanager"
                app:layout_constraintVertical_bias="0.0">

                <RadioButton
                    android:id="@+id/radio_away_player_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Away Player 1" />
                <RadioButton
                    android:id="@+id/radio_away_player_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Away Player 2" />
                <RadioButton
                    android:id="@+id/radio_away_player_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Away Player 3" />
                <RadioButton
                    android:id="@+id/radio_away_player_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Away Player 4" />
                <RadioButton
                    android:id="@+id/radio_away_player_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Away Player 5" />
            </RadioGroup>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_with_actions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/radioGroup_homeTeam"
                app:layout_constraintVertical_bias="0"
                card_view:cardElevation="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout_Cardview_with_actions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button_2points"
                        android:layout_width="80dp"
                        android:layout_height="150dp"
                        android:background="@drawable/rounded_button_2points"
                        android:text="+2 \nPts"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.02"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.02" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button_2pointsMissed"
                        android:layout_width="80dp"
                        android:layout_height="150dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/rounded_button_2missed"
                        android:text="2 PTS Miss"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.02"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/button_2points"
                        app:layout_constraintVertical_bias="0.5"
                        tools:ignore="TouchTargetSizeCheck" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button_freeThrow"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_button_free_throw"
                        android:text="Free Throw"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/button_3points"
                        app:layout_constraintStart_toEndOf="@+id/button_2points"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.02"
                        tools:ignore="TextContrastCheck" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button_freeThrowMissed"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_button_free_throwmissed"
                        android:text="FT Miss"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/button_3points"
                        app:layout_constraintStart_toEndOf="@+id/button_2points"
                        app:layout_constraintTop_toBottomOf="@+id/button_freeThrow"
                        app:layout_constraintVertical_bias="0.05"
                        tools:ignore="TextContrastCheck" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button_3points"
                        android:layout_width="80dp"
                        android:layout_height="150dp"
                        android:background="@drawable/rounded_button_3points"
                        android:text="+3 \nPts"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.98"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.02" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button_3pointsMissed"
                        android:layout_width="80dp"
                        android:layout_height="150dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/rounded_button_3missed"
                        android:text="3 Pts Miss"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.98"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/button_3points"
                        app:layout_constraintVertical_bias="0.5"
                        tools:ignore="TouchTargetSizeCheck" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button_assist"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginLeft="4dp"
                        android:background="@drawable/rounded_button_other_actions"
                        android:text="AST"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toEndOf="@+id/button_2pointsMissed"
                        app:layout_constraintTop_toBottomOf="@+id/button_freeThrowMissed"
                        app:layout_constraintVertical_bias="0.05" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button_foul"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_button_other_actions"
                        android:text="Foul"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/button_3points"
                        app:layout_constraintHorizontal_bias="0.98"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/button_freeThrowMissed"
                        app:layout_constraintVertical_bias="0.05" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button_rebound"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_button_other_actions"
                        android:text="REB"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@+id/button_steal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.02"
                        app:layout_constraintStart_toEndOf="@+id/button_2pointsMissed"
                        app:layout_constraintTop_toBottomOf="@+id/button_assist" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button_block"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_button_other_actions"
                        android:text="blk"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@+id/button_turnover"
                        app:layout_constraintEnd_toStartOf="@+id/button_3pointsMissed"
                        app:layout_constraintHorizontal_bias="0.98"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/button_foul" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button_steal"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_button_other_actions"
                        android:text="STL"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.02"
                        app:layout_constraintStart_toEndOf="@+id/button_2pointsMissed"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.93" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button_turnover"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_button_other_actions"
                        android:text="TO"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/button_3pointsMissed"
                        app:layout_constraintHorizontal_bias="0.98"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.93" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <com.example.esake.ToggleButtonGroupTableLayout
                android:id="@+id/radGroup_choose_opponent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_with_actions">

                <TableRow>

                    <RadioButton
                        android:id="@+id/opponent1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:text="Player 1"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/opponent2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:text="Player 2"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/opponent3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Player 3"
                        android:textSize="14sp" />
                </TableRow>

                <TableRow>

                    <RadioButton
                        android:id="@+id/opponent4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:text="Player 4"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/opponent5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:text="Player 5"
                        android:textSize="14sp" />
                </TableRow>
            </com.example.esake.ToggleButtonGroupTableLayout>

