            </intent-filter>
        </activity>
        <activity
            android:name=".Stats_Manager_Pages"
            android:exported="false"
            android:theme="@style/Theme.Esake.NoActionBar"/>
        <activity
            android:name=".StatsManagerHome.HomeActivity"
            android:exported="false" />
        <activity
            android:name=".ui.login.LoginActivity"
