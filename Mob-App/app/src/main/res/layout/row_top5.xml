<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto">

	<androidx.cardview.widget.CardView
		android:id="@+id/top5cardView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="5dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintVertical_bias="0.0">

		<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<ImageView
				android:id="@+id/imgTop5"
				android:layout_width="34dp"
				android:layout_height="34dp"
				android:layout_marginTop="5dp"
				android:layout_marginBottom="5dp"
				android:contentDescription="@string/top5_player_image"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintHorizontal_bias="0.01"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				app:srcCompat="@drawable/esake_logo" />

			<TextView
				android:id="@+id/nameTop5"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/top5_player_name"
				android:textSize="12dp"

				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintHorizontal_bias="0.01"
				app:layout_constraintStart_toEndOf="@+id/imgTop5"
				app:layout_constraintTop_toTopOf="parent" />

			<TextView
				android:id="@+id/positionTop5"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/top5_player_position"
				android:textSize="20sp"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintHorizontal_bias="0.38"
				app:layout_constraintStart_toEndOf="@+id/nameTop5"
				app:layout_constraintTop_toTopOf="parent" />

			<TextView
				android:id="@+id/ratingTop5"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/top5_player_rating"
				android:textSize="20sp"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintHorizontal_bias="0.62"
				app:layout_constraintStart_toEndOf="@+id/positionTop5"
				app:layout_constraintTop_toTopOf="parent" />

		</androidx.constraintlayout.widget.ConstraintLayout>

	</androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>