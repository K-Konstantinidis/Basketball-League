<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto">

	<androidx.cardview.widget.CardView
		android:id="@+id/playerStatsCardView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:cardElevation="0dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintVertical_bias="0.0">

		<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<ImageView
				android:id="@+id/player_stats_team_logo"
				android:layout_width="22dp"
				android:layout_height="22dp"
				android:contentDescription="@string/player_stats_team_logo"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintHorizontal_bias="0.01"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				app:srcCompat="@drawable/esake_logo" />

			<TextView
				android:id="@+id/player_stats_playerName"
				android:layout_width="100dp"
				android:layout_height="wrap_content"
				android:ellipsize="end"
				android:maxLines="1"
				android:text="@string/player_stats_playerName"
				android:textSize="12sp"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintHorizontal_bias="0.02"
				app:layout_constraintStart_toEndOf="@+id/player_stats_team_logo"
				app:layout_constraintTop_toTopOf="parent" />

			<View
				android:id="@+id/lineBetweenPlayerAndPoints"
				android:layout_width="2dp"
				android:layout_height="30dp"
				android:layout_marginStart="5dp"
				android:layout_marginLeft="5dp"
				android:background="@color/black"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintHorizontal_bias="0.0"
				app:layout_constraintStart_toEndOf="@+id/player_stats_playerName"
				app:layout_constraintTop_toTopOf="parent" />

			<TextView
				android:id="@+id/player_stats_rating_value"
				android:layout_width="50dp"
				android:layout_height="wrap_content"
				android:layout_marginStart="5dp"
				android:layout_marginLeft="5dp"
				android:gravity="left"
				android:text="@string/player_stats_rating_value"
				android:textSize="16sp"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintHorizontal_bias="0.0"
				app:layout_constraintStart_toEndOf="@+id/lineBetweenPlayerAndPoints"
				app:layout_constraintTop_toTopOf="parent" />

			<TextView
				android:id="@+id/player_stats_pts_value"
				android:layout_width="50dp"
				android:layout_height="wrap_content"
				android:layout_marginStart="5dp"
				android:layout_marginLeft="5dp"
				android:gravity="left"
				android:minWidth="35dp"
				android:maxWidth="40dp"
				android:text="@string/player_stats_pts_value"
				android:textSize="16sp"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintHorizontal_bias="0.0"
				app:layout_constraintStart_toEndOf="@id/player_stats_rating_value"
				app:layout_constraintTop_toTopOf="parent" />

			<TextView
				android:id="@+id/player_stats_fg_value"
				android:layout_width="50dp"
				android:layout_height="wrap_content"
				android:layout_marginStart="5dp"
				android:layout_marginLeft="5dp"
				android:gravity="left"
				android:minWidth="35dp"
				android:maxWidth="40dp"
				android:text="@string/player_stats_fg_value"
				android:textSize="16sp"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintHorizontal_bias="0.0"
				app:layout_constraintStart_toEndOf="@id/player_stats_pts_value"
				app:layout_constraintTop_toTopOf="parent" />

			<TextView
				android:id="@+id/player_stats_3fg_value"
				android:layout_width="50dp"
				android:layout_height="wrap_content"
				android:layout_marginStart="5dp"
				android:layout_marginLeft="5dp"
				android:gravity="left"
				android:minWidth="35dp"
				android:maxWidth="40dp"
				android:text="@string/player_stats_3fg_value"
				android:textSize="16sp"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintHorizontal_bias="0.0"
				app:layout_constraintStart_toEndOf="@id/player_stats_fg_value"
				app:layout_constraintTop_toTopOf="parent" />

			<TextView
				android:id="@+id/player_stats_percentfg_value"
				android:layout_width="50dp"
				android:layout_height="wrap_content"
				android:layout_marginStart="5dp"
				android:layout_marginLeft="5dp"
				android:gravity="left"
				android:minWidth="35dp"
				android:maxWidth="40dp"
				android:text="@string/player_stats_percentfg_value"
				android:textSize="16sp"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintHorizontal_bias="0.0"
				app:layout_constraintStart_toEndOf="@id/player_stats_3fg_value"
				app:layout_constraintTop_toTopOf="parent" />

			<TextView
				android:id="@+id/player_stats_reb_value"
				android:layout_width="50dp"
				android:layout_height="wrap_content"
				android:layout_marginStart="5dp"
				android:layout_marginLeft="5dp"
				android:gravity="left"
				android:minWidth="35dp"
				android:maxWidth="40dp"
				android:text="@string/player_stats_reb_value"
				android:textSize="16sp"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintHorizontal_bias="0.0"
				app:layout_constraintStart_toEndOf="@id/player_stats_percentfg_value"
				app:layout_constraintTop_toTopOf="parent" />

			<TextView
				android:id="@+id/player_stats_ast_value"
				android:layout_width="50dp"
				android:layout_height="wrap_content"
				android:layout_marginStart="5dp"
				android:layout_marginLeft="5dp"
				android:gravity="left"
				android:minWidth="35dp"
				android:maxWidth="40dp"
				android:text="@string/player_stats_ast_value"
				android:textSize="16sp"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintHorizontal_bias="0.0"
				app:layout_constraintStart_toEndOf="@id/player_stats_reb_value"
				app:layout_constraintTop_toTopOf="parent" />

			<TextView
				android:id="@+id/player_stats_stl_value"
				android:layout_width="50dp"
				android:layout_height="wrap_content"
				android:layout_marginStart="5dp"
				android:layout_marginLeft="5dp"
				android:gravity="left"
				android:minWidth="35dp"
				android:maxWidth="40dp"
				android:text="@string/player_stats_stl_value"
				android:textSize="16sp"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintHorizontal_bias="0.0"
				app:layout_constraintStart_toEndOf="@+id/player_stats_ast_value"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintVertical_bias="0.5" />

			<TextView
				android:id="@+id/player_stats_block_value"
				android:layout_width="50dp"
				android:layout_height="wrap_content"
				android:layout_marginStart="5dp"
				android:layout_marginLeft="5dp"
				android:gravity="left"
				android:minWidth="35dp"
				android:maxWidth="40dp"
				android:text="@string/player_stats_stl_value"
				android:textSize="16sp"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintHorizontal_bias="0.0"
				app:layout_constraintStart_toEndOf="@+id/player_stats_stl_value"
				app:layout_constraintTop_toTopOf="parent" />

			<TextView
				android:id="@+id/player_stats_foul_value"
				android:layout_width="50dp"
				android:layout_height="wrap_content"
				android:layout_marginStart="5dp"
				android:layout_marginLeft="5dp"
				android:gravity="left"
				android:minWidth="35dp"
				android:maxWidth="40dp"
				android:text="@string/player_stats_stl_value"
				android:textSize="16sp"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintHorizontal_bias="0.0"
				app:layout_constraintStart_toEndOf="@+id/player_stats_block_value"
				app:layout_constraintTop_toTopOf="parent" />

			<TextView
				android:id="@+id/player_stats_turnover_value"
				android:layout_width="40dp"
				android:layout_height="wrap_content"
				android:layout_marginStart="5dp"
				android:layout_marginLeft="5dp"
				android:gravity="left"
				android:minWidth="35dp"
				android:maxWidth="40dp"
				android:text="@string/player_stats_stl_value"
				android:textSize="16sp"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintHorizontal_bias="0.0"
				app:layout_constraintStart_toEndOf="@+id/player_stats_foul_value"
				app:layout_constraintTop_toTopOf="parent" />
		</androidx.constraintlayout.widget.ConstraintLayout>
	</androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>